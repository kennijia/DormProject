<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="edu.wbu.dorm.mapper.StudentMapper" >
    <select id="findByIdAndPassword" resultType="student" parameterType="student">
        SELECT * FROM student WHERE id = #{id} and password = #{password}
    </select>
    <select id="findById" parameterType="String" resultType="student">
        SELECT * FROM student WHERE id = #{id}
    </select>
</mapper>